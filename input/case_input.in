[Case]
 num_elements = 20
 x_begin = 0.0
 x_end = 1.0
 uniform_grid = 1
 refinement_level = 0

[Simulation] 
 print_freq = 10
 convergence_tolerance = 1e-16
 divergence_threshold = 20  
 restart_flag = 0
 restart_iter = 158e6
 mode = test  # normal/test

[wave]
 wave_speed = 1;
 wave_form = 0;      # 0: sine wave, 1: Gaussian wave
 Gaussian_exponent = 38.6;  # u(x) = exp(-38.6 *x^2)

[space_solver]
  order = 2;
  upwind_biased = 1  # 1: for 3rd order scheme with upwind biased flux. If '0' then it is a fully upwind scheme
 
[time_solver]
 calculate_dt_flag = 1 # 1: specify CFL and calc dt, 0: specify dt and calc CFL

 CFL_no = 1.733

 dt = 1e-5
 initial_time = 0
 final_time = 6e5

 no_of_periods = 150000.0 #  period = (xf-x0) / wave_speed
 
 maximum_iteration = 1e7

 end_of_simulation_flag = 0 
# 0: use no. of periods to calc final time and then use final time, 1: use final time directly and then calculate no of periods,2:  use max_iteration as a stopping criteria if not converged or diverged 

 [./explicit]

  RK_order = 3
